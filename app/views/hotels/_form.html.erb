<%= simple_form_for(@hotel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street %>
    <%= f.input :suburb %>
    <%= f.input :state, collection: ['NSW', 'QLD', 'VIC', 'WA', 'SA', 'NT'], as: :radio_buttons%>
    <%= f.input :postcode %>
    <%= f.input :country, priority: ['Australia', 'New Zealand'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
